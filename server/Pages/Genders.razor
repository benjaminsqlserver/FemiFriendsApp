@page "/genders"
@layout MainLayout
@inherits FemiFriendsApp.Pages.GendersComponent

@using Radzen
@using Radzen.Blazor
@using FemiFriendsApp.Models.ConData
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Genders">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getGendersResult" TItem="FemiFriendsApp.Models.ConData.Gender" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="FemiFriendsApp.Models.ConData.Gender" Property="GenderID" Title="Gender ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="FemiFriendsApp.Models.ConData.Gender" Property="GenderName" Title="Gender Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="FemiFriendsApp.Models.ConData.Gender" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="femiFriendsAppModelsConDataGender">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, femiFriendsAppModelsConDataGender))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
